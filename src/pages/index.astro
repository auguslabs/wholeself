---
/**
 * Página Home - Whole Self Counseling
 * 
 * Página principal del sitio web.
 * Por ahora solo contiene una sección principal con el nombre de la página.
 */

// Importar el layout base
import BaseLayout from '@/layouts/BaseLayout.astro';
import CTASection from '@/components/home/CTASection.astro';
---

<!-- Usar el layout base con título personalizado -->
<BaseLayout title="Home - Whole Self Counseling">
  <!-- Sección principal de la página con ID único -->
  <section id="home-hero" class="flex items-center justify-center min-h-[60vh] bg-gray-50 py-12">
    <!-- Contenedor para centrar el contenido -->
    <div class="flex items-center justify-center w-full">
      <!-- Imagen safespace.svg centrada -->
      <img 
        src="/safespace.svg" 
        alt="Safe Space - Whole Self Counseling"
        class="max-w-[90%] sm:max-w-[80%] md:max-w-[70%] lg:max-w-[60%] xl:max-w-[50%] h-auto scale-50"
      />
    </div>
  </section>

  <!-- Sección de CTAs -->
  <CTASection />
</BaseLayout>

