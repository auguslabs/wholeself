---
/**
 * Página Crisis Resources - WholeSelf Counseling
 *
 * Página de recursos de crisis y emergencia.
 * Esta página debe ser siempre accesible desde el header y footer.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { getPageContent, getLocalizedText } from '@/data/services/contentService';
import { getLocaleFromPath } from '@/utils/i18n';
import type { LocalizedText } from '@/data/models/ContentPage';

const lang = getLocaleFromPath(Astro.url.pathname);
const crisisData = await getPageContent('crisis-resources');

type CrisisResource = {
  name: LocalizedText;
  description?: LocalizedText;
  phone?: string | null;
  url?: string | null;
  text?: string | null;
  tty?: string | null;
  videoPhone?: string | null;
  instantMessenger?: string | null;
  email?: string | null;
  hours?: LocalizedText;
  address?: LocalizedText;
};

type CrisisSubcategory = {
  title: LocalizedText;
  resources?: CrisisResource[];
};

type CrisisCategory = {
  title: LocalizedText;
  subcategories?: CrisisSubcategory[];
};

const pageTitle = getLocalizedText(crisisData.seo.title, lang);
const pageDescription = getLocalizedText(crisisData.seo.description, lang);
const heroTitle = getLocalizedText(crisisData.content.hero.title, lang);
const categories = (crisisData.content.categories || []) as CrisisCategory[];

const labels = {
  phone: lang === 'es' ? 'Teléfono' : 'Phone',
  text: lang === 'es' ? 'Texto' : 'Text',
  tty: lang === 'es' ? 'TTY' : 'TTY',
  videoPhone: lang === 'es' ? 'Videoteléfono' : 'Video Phone',
  instantMessenger: lang === 'es' ? 'Mensajería instantánea' : 'Instant Messenger',
  email: lang === 'es' ? 'Correo electrónico' : 'Email',
  hours: lang === 'es' ? 'Horario' : 'Hours',
  address: lang === 'es' ? 'Dirección' : 'Address',
  website: lang === 'es' ? 'Sitio web' : 'Website',
};

const formatUrl = (url?: string | null) => {
  if (!url) {
    return null;
  }
  return url.startsWith('http') ? url : `https://${url}`;
};
---

<!-- Usar el layout base con título personalizado -->
<BaseLayout title={pageTitle} description={pageDescription}>
  <section id="crisis-resources-hero" class="py-16 px-4 bg-gray-50">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
        {heroTitle}
      </h1>
      {pageDescription && (
        <p class="mt-4 text-lg text-gray-700">
          {pageDescription}
        </p>
      )}
    </div>
  </section>

  <section id="crisis-resources-content" class="py-12 px-4 bg-white">
    <div class="max-w-5xl mx-auto space-y-12">
      {categories.map((category) => (
        <div class="space-y-8">
          <h2 class="text-2xl md:text-3xl font-semibold text-navy-900">
            {getLocalizedText(category.title, lang)}
          </h2>

          {category.subcategories?.map((subcategory) => (
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-navy-800">
                {getLocalizedText(subcategory.title, lang)}
              </h3>

              <div class="grid grid-cols-1 gap-4">
                {subcategory.resources?.map((resource) => (
                  <article class="border border-gray-200 rounded-lg p-5 bg-gray-50">
                    <div class="space-y-2">
                      <h4 class="text-lg font-semibold text-gray-900">
                        {getLocalizedText(resource.name, lang)}
                      </h4>
                      {resource.description && (
                        <p class="text-sm text-gray-700">
                          {getLocalizedText(resource.description, lang)}
                        </p>
                      )}
                    </div>

                    <div class="mt-4 space-y-1 text-sm text-gray-700">
                      {resource.phone && (
                        <div>
                          <span class="font-medium">{labels.phone}:</span>{' '}
                          <a
                            href={`tel:${resource.phone.replace(/[^\d+]/g, '')}`}
                            class="text-tealBlue-700 hover:text-tealBlue-800"
                          >
                            {resource.phone}
                          </a>
                        </div>
                      )}
                      {resource.text && (
                        <div>
                          <span class="font-medium">{labels.text}:</span> {resource.text}
                        </div>
                      )}
                      {resource.tty && (
                        <div>
                          <span class="font-medium">{labels.tty}:</span> {resource.tty}
                        </div>
                      )}
                      {resource.videoPhone && (
                        <div>
                          <span class="font-medium">{labels.videoPhone}:</span> {resource.videoPhone}
                        </div>
                      )}
                      {resource.instantMessenger && (
                        <div>
                          <span class="font-medium">{labels.instantMessenger}:</span> {resource.instantMessenger}
                        </div>
                      )}
                      {resource.email && (
                        <div>
                          <span class="font-medium">{labels.email}:</span>{' '}
                          <a
                            href={`mailto:${resource.email}`}
                            class="text-tealBlue-700 hover:text-tealBlue-800"
                          >
                            {resource.email}
                          </a>
                        </div>
                      )}
                      {resource.hours && (
                        <div>
                          <span class="font-medium">{labels.hours}:</span>{' '}
                          {getLocalizedText(resource.hours, lang)}
                        </div>
                      )}
                      {resource.address && (
                        <div>
                          <span class="font-medium">{labels.address}:</span>{' '}
                          {getLocalizedText(resource.address, lang)}
                        </div>
                      )}
                      {resource.url && (
                        <div>
                          <span class="font-medium">{labels.website}:</span>{' '}
                          <a
                            href={formatUrl(resource.url)}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-tealBlue-700 hover:text-tealBlue-800 break-words"
                          >
                            {resource.url}
                          </a>
                        </div>
                      )}
                    </div>
                  </article>
                ))}
              </div>
            </div>
          ))}
        </div>
      ))}
    </div>
  </section>
</BaseLayout>

